<div id="contact" v-cloak>
  <div class="container">
    <h1 class="text-center">Post Job</h1>
    <div class="contact-form" v-if="!cloudSuccess">
      <hr/>
      <ajax-form action="deliverContactFormMessage" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
        <div class="form-group">
          <label for="full-name">Title</label>
          <input class="form-control" id="full-name" name="full-name" type="text"
                 :class="[formErrors.fullName ? 'is-invalid' : '']" v-model.trim="formData.fullName"
                 placeholder="Software Engineer" focus-first>
          <div class="invalid-feedback" v-if="formErrors.fullName">Please enter your title.</div>
        </div>
        <div class="form-group">
          <label for="email-address">Location</label>
          <input class="form-control" id="email-address" name="email-address" type="text"
                 :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress"
                 placeholder="Kuala Lumpur">
          <div class="invalid-feedback" v-if="formErrors.emailAddress">Please enter your location.</div>
        </div>
        <div class="form-group">
          <label for="topic">Date</label>
          <input class="form-control" id="topic" name="topic" type="date"
                 :class="[formErrors.topic ? 'is-invalid' : '']" v-model.trim="formData.topic"
                 placeholder="Pricing question" autocomplete="none">
          <div class="invalid-feedback" v-if="formErrors.topic">Please choose a topic for your message.</div>
        </div>
        <div class="form-group">
          <label for="topic">Status</label>
          <select class="form-control" id="status" name="status" :class="[formErrors.status ? 'is-invalid' : '']">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
          </select>
          <div class="invalid-feedback" v-if="formErrors.Status">Please choose a Status for your message.</div>
        </div>
        <div class="form-group">
          <label for="message">Description</label>
          <textarea class="form-control" id="message" name="message" :class="[formErrors.message ? 'is-invalid' : '']"
                    v-model.trim="formData.message"
                    placeholder="Job is for Software Engineers"
                    autocomplete="none"></textarea>
          <div class="invalid-feedback" v-if="formErrors.message">Description cannot be empty.</div>
        </div>
        <p class="text-danger" v-if="cloudError">
          <small>An error occured while processing your request. Please check your information and try again</small>
        </p>
        <div class="form-group">
          <ajax-button type="submit" :syncing="syncing" class="btn btn-dark btn-lg btn-block">Post Job</ajax-button>
        </div>
      </ajax-form>
    </div>
    <div class="success-message" v-if="cloudSuccess">
      <p class="text-center">Job has been posted successfully </p>
      <hr/>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
